##
var a:= ReadlnReal('Введите количество сдачи>>');
Println('Следует сдать:');
Println('банкнот по 1000 руб. -',Int(a/1000), 'шт.');
Println('банкнот по 500 руб. -',Int(a/500), 'шт.');
Println('банкнот по 100 руб. -',Int((a-500)/100), 'шт.');
Println('банкнот по 50 руб. -',Round(Frac(((a-500)/100)+0.01)), 'шт.');
